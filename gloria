    public void GloriaReconstruidaEntera(){
        System.out.println("■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■  ");
        System.out.println("            GLORIA RECONSTITUIDA ENTERA   ");
        System.out.println(" ");
        System.out.println("1. Gloria Reconstituida Entera (lata 400g) ------> S/5.50");
        System.out.println("2. Gloria Reconstituida Entera (lata 170g) ------> S/2.50");
        System.out.println("0. Regresar a Categoria Leches Evaporadas");
        System.out.println("■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ");
        System.out.println(" Seleccione una opcion  ");
        int OpcionGloriaReconstruidaEntera=raja.nextInt();
        switch (OpcionGloriaReconstruidaEntera){
            case 1:
                System.out.println("Cuantos Unidades va a Llevar");
                int cantidad1 = raja.nextInt();
                double Total1 = cantidad1 * 5.50;
                double IGV1 = Total1 * 0.18;
                double SubTotal1=Total1-IGV1;
                System.out.println("El SubTotal es de: $"+SubTotal1);
                System.out.println("El Total a Pagar es: $" + Total1);
                System.out.println("El IGV es de: " + IGV1);
                ArraysProductos.add("|---"+cantidad1+"---|Gloria Reconstituida Entera (lata 400g)      |"+Total1+"--|");
                ArraysPrecios.add(Total1);

                MenuPrincipal();
                break;
            case 2:
                System.out.println("Cuantos Unidades va a Llevar");
                int cantidad2 = raja.nextInt();
                double Total2 = cantidad2 * 2.50;
                double IGV2 = Total2 * 0.18;
                double SubTotal2=Total2-IGV2;
                System.out.println("El SubTotal es de: $"+SubTotal2);
                System.out.println("El Total a Pagar es: $" + Total2);
                System.out.println("El IGV es de: " + IGV2);
                ArraysProductos.add("|---"+cantidad2+"---|Gloria Reconstituida Entera (lata 170g)      |"+Total2+"--|");
                ArraysPrecios.add(Total2);
                MenuPrincipal();
                break;
            default:
                System.out.println("Esta Opcion no Existe");
                break;
        }
    }
