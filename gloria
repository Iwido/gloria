    public void DerivadosdeLacteos(){
        System.out.println("■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■");
        System.out.println("  CATEGORIA DERIVADOS DE LACTEOS   ");
        System.out.println(" ");
        System.out.println("1. Gloria Mantequilla");
        System.out.println("2. Gloria Leche Condensada");
        System.out.println("3. Bonle Quesos");
        System.out.println("4. Bonle Manjarblanco");
        System.out.println("5. Gloria Crema de Leche");
        System.out.println("0. Regresar al Menu Principal");
        System.out.println("■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■");
        System.out.println("Seleccione una categoria   ");
        int OpcionDerivadosdeLacteos = raja.nextInt();
        switch (OpcionDerivadosdeLacteos) {
            case 1:
                GloriaMantequilla();
                break;
            case 2:
                GloriaLecheCondensada();
                break;
            case 3:
                BonleQuesos();
                break;
            case 4:
                BonleManjarblanco();
                break;
            case 5:
                GloriaCremadeLeche();
                break;
            default:
                System.out.println("Esta Opcion no Existe");
                break;
        }
    }

    public void GloriaMantequilla() {
        System.out.println("■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■  ");
        System.out.println("                 GLORIA MANTEQUILLA");
        System.out.println(" ");
        System.out.println("1. Gloria Mantequilla (pote 390g) --------> S/ 17.50");
        System.out.println("2. Gloria Mantequilla (pote 200g) --------> S/ 11.50");
        System.out.println("3. Gloria Mantequilla (barra 200g) -------> S/ 11.00");
        System.out.println("4. Gloria Mantequilla (barra 90g) ---- ---> S/  6.00");
        System.out.println("■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ■ ");
        System.out.println(" Seleccione una opcion  ");
        int OpcionGloriaMermelada = raja.nextInt();
        switch (OpcionGloriaMermelada) {
            case 1:
                System.out.println("Cuantos Unidades va a Llevar");
                int cantidad1 = raja.nextInt();
                double Total1 = cantidad1 * 17.50;
                double IGV1 = Total1 * 0.18;
                double SubTotal1 = Total1 - IGV1;
                System.out.println("El SubTotal es de: $" + SubTotal1);
                System.out.println("El Total a Pagar es: $" + Total1);
                System.out.println("El IGV es de: " + IGV1);
                ArraysProductos.add("|---"+cantidad1+"---|Gloria Mantequilla (pote 390g)               |"+Total1+"--|");
                ArraysPrecios.add(Total1);
                MenuPrincipal();
                break;
            case 2:
                System.out.println("Cuantos Unidades va a Llevar");
                int cantidad2 = raja.nextInt();
                double Total2 = cantidad2 * 11.50;
                double IGV2 = Total2 * 0.18;
                double SubTotal2 = Total2 - IGV2;
                System.out.println("El SubTotal es de: $" + SubTotal2);
                System.out.println("El Total a Pagar es: $" + Total2);
                System.out.println("El IGV es de: " + IGV2);
                ArraysProductos.add("|---"+cantidad2+"---|Gloria Mantequilla (pote 200g)               |"+Total2+"--|");
                ArraysPrecios.add(Total2);
                MenuPrincipal();
                break;
            case 3:
                System.out.println("Cuantos Unidades va a Llevar");
                int cantidad3 = raja.nextInt();
                double Total3 = cantidad3 * 11.00;
                double IGV3 = Total3 * 0.18;
                double SubTotal3 = Total3 - IGV3;
                System.out.println("El SubTotal es de: $" + SubTotal3);
                System.out.println("El Total a Pagar es: $" + Total3);
                System.out.println("El IGV es de: " + IGV3);
                ArraysProductos.add("|---"+cantidad3+"---|Gloria Mantequilla (barra 200g               |"+Total3+"--|");
                ArraysPrecios.add(Total3);
                MenuPrincipal();
                break;
            case 4:
                System.out.println("Cuantos Unidades va a Llevar");
                int cantidad4 = raja.nextInt();
                double Total4 = cantidad4 * 6.00;
                double IGV4 = Total4 * 0.18;
                double SubTotal4 = Total4 - IGV4;
                System.out.println("El SubTotal es de: $" + SubTotal4);
                System.out.println("El Total a Pagar es: $" + Total4);
                System.out.println("El IGV es de: " + IGV4);
                ArraysProductos.add("|---"+cantidad4+"---|Gloria Mantequilla (barra 90g)               |"+Total4+"--|");
                ArraysPrecios.add(Total4);
